<!-- 
  Example launch file for octomap_server mapping: 
  Listens to incoming PointCloud2 data and incrementally builds an octomap. 
  The data is sent out in different representations. 

  Copy this file into your workspace and adjust as needed, see
  www.ros.org/wiki/octomap_server for details  
-->
<launch>

	<node pkg="octomap_server" type="octomap_server_node" name="octomap_loaded_map_server_turtlebot" output="screen">
		<param name="map_file" value="$(find windblade_scanner)/maps/turtlebot/3D/windblade_under_bi.bt" />
		<param name="frame_id" type="string" value="world" />
		<!-- Remappings -->
		<remap from="occupied_cells_vis_array" to="occupied_cells_vis_array_loaded_map_turtlebot"/>
		<remap from="free_cells_vis_array" to="free_cells_vis_array_loaded_map_turtlebot"/>
		<remap from="projected_map" to="projected_map_loaded_map_turtlebot"/>
		<remap from="octomap_binary" to="octomap_binary_loaded_map_turtlebot"/>
		<remap from="octomap_full" to="octomap_full_loaded_map_turtlebot"/>
		<remap from="octomap_point_cloud_centers" to="octomap_point_cloud_centers_loaded_map_turtlebot"/>
	</node>

</launch>
